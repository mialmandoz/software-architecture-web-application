<!-- Centered Title -->
<div class="text-center mb-8">
  <h1 class="text-4xl font-bold text-base-content">ğŸ‘¨â€ğŸ’¼ Authors</h1>
  <p class="mt-2 text-base-content/70">Discover and manage author profiles</p>
</div>

<.table id="authors" rows={@authors} row_click={&JS.navigate(~p"/authors/#{&1}")}>
  <:col :let={author} label="Name">{author.name}</:col>
  <:col :let={author} label="Country">{author.country_of_origin}</:col>
  <:col :let={author} label="Date of Birth">
    {if author.date_of_birth,
      do: Calendar.strftime(author.date_of_birth, "%B %d, %Y"),
      else: "Not set"}
  </:col>
  <:col :let={author} label="Description">
    <%= if String.length(author.short_description) > 100 do %>
      {String.slice(author.short_description, 0, 100)}...
    <% else %>
      {author.short_description}
    <% end %>
  </:col>
  <:action :let={author}>
    <div class="sr-only">
      <.link navigate={~p"/authors/#{author}"}>Show</.link>
    </div>
    <.link navigate={~p"/authors/#{author}/edit"}>Edit</.link>
  </:action>
  <:action :let={author}>
    <.link href={~p"/authors/#{author}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>

<!-- Centered Action Buttons -->
<div class="flex justify-center gap-4 mt-8">
  <.link href={~p"/authors/new"}>
    <.button class="bg-green-600 hover:bg-green-700">âœï¸ New Author</.button>
  </.link>
  <.link href={~p"/authors/statistics"}>
    <.button class="bg-purple-600 hover:bg-purple-700">ğŸ“Š Author Statistics</.button>
  </.link>
  <.link navigate={~p"/"}>
    <.button class="bg-gray-500 hover:bg-gray-600">ğŸ  Main Menu</.button>
  </.link>
</div>
