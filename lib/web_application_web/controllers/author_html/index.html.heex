<!-- Centered Title -->
<div class="text-center mb-8">
  <h1 class="text-4xl font-bold text-base-content">👨‍💼 Authors</h1>
  <p class="mt-2 text-base-content/70">Discover and manage author profiles</p>
</div>

<!-- Action Buttons -->
<div class="flex justify-center gap-4 mb-6">
  <.link href={~p"/authors/new"}>
    <.button class="bg-green-600 hover:bg-green-700 px-6 py-3 text-lg">✍️ New Author</.button>
  </.link>
  <.link href={~p"/authors/statistics"}>
    <.button class="bg-purple-600 hover:bg-purple-700 px-6 py-3 text-lg">
      📊 Author Statistics
    </.button>
  </.link>
</div>

<!-- Filter Form -->
<div class="mb-6">
  <.form
    :let={f}
    for={%{}}
    action={~p"/authors"}
    method="get"
    class="flex flex-col sm:flex-row items-center gap-4"
  >
    <div class="flex-1">
      <.input
        field={f[:filter_name]}
        type="text"
        placeholder="Filter by author name..."
        value={@filter_name}
        name="filter_name"
        class="w-full text-lg px-4 py-3"
      />
    </div>
    <div class="flex-1">
      <.input
        field={f[:filter_country]}
        type="text"
        placeholder="Filter by country..."
        value={@filter_country}
        name="filter_country"
        class="w-full text-lg px-4 py-3"
      />
    </div>
    <.button type="submit" class="bg-blue-600 hover:bg-blue-700 px-6 py-3 text-lg">
      🔍 Filter
    </.button>
    <%= if @filter_name != "" or @filter_country != "" do %>
      <.link href={~p"/authors"} class="text-sm text-gray-500 hover:text-gray-700">
        Clear Filters
      </.link>
    <% end %>
  </.form>
</div>

<.table id="authors" rows={@authors} row_click={&JS.navigate(~p"/authors/#{&1}")}>
  <:col :let={author} label="Name">{author.name}</:col>
  <:col :let={author} label="Country">{author.country_of_origin}</:col>
  <:col :let={author} label="Date of Birth">
    {if author.date_of_birth,
      do: Calendar.strftime(author.date_of_birth, "%B %d, %Y"),
      else: "Not set"}
  </:col>
  <:col :let={author} label="Description">
    <%= if String.length(author.short_description) > 100 do %>
      {String.slice(author.short_description, 0, 100)}...
    <% else %>
      {author.short_description}
    <% end %>
  </:col>
  <:action :let={author}>
    <div class="sr-only">
      <.link navigate={~p"/authors/#{author}"}>Show</.link>
    </div>
    <.link navigate={~p"/authors/#{author}/edit"}>Edit</.link>
  </:action>
  <:action :let={author}>
    <.link href={~p"/authors/#{author}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>

<!-- Empty State -->
<%= if Enum.empty?(@authors) do %>
  <div class="text-center py-12">
    <div class="text-6xl mb-4">👨‍💼</div>
    <h3 class="text-lg font-medium text-base-content mb-2">No authors found</h3>
    <p class="text-base-content/60">
      <%= if @filter_name != "" or @filter_country != "" do %>
        No authors match your search criteria. Try adjusting your filters.
      <% else %>
        There are no authors in the system yet.
      <% end %>
    </p>
  </div>
<% end %>
