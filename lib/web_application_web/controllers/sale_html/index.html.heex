<!-- Centered Title -->
<div class="text-center mb-8">
  <h1 class="text-4xl font-bold text-base-content">ğŸ“Š Sales by Year</h1>
  <p class="mt-2 text-base-content/70">Track book sales data and performance by year</p>
</div>

<.table id="sales" rows={@sales} row_click={&JS.navigate(~p"/sales/#{&1}")}>
  <:col :let={sale} label="Book">{sale.book.name}</:col>
  <:col :let={sale} label="Year">{sale.year}</:col>
  <:col :let={sale} label="Sales">
    ğŸ“Š {format_sales(sale.sales)}
  </:col>
  <:col :let={sale} label="Author">
    {if sale.book.author, do: sale.book.author.name, else: "Unknown"}
  </:col>
  <:action :let={sale}>
    <div class="sr-only">
      <.link navigate={~p"/sales/#{sale}"}>Show</.link>
    </div>
    <.link navigate={~p"/sales/#{sale}/edit"}>Edit</.link>
  </:action>
  <:action :let={sale}>
    <.link href={~p"/sales/#{sale}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>

<!-- Centered Action Buttons -->
<div class="flex justify-center gap-4 mt-8">
  <.link href={~p"/sales/new"}>
    <.button class="bg-purple-600 hover:bg-purple-700">ğŸ“Š New Sale Record</.button>
  </.link>
  <.link navigate={~p"/"}>
    <.button class="bg-gray-500 hover:bg-gray-600">ğŸ  Main Menu</.button>
  </.link>
</div>
